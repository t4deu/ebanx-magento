<?xml version="1.0"?>
<config>
	<sections>
		<payment>
			<groups>
				<ebanx_express translate="label" module="ebanx_express">
					<label>EBANX Express Checkout</label>
					<comment>EBANX Express - Credit cards for Brazil</comment>
					<sort_order>800</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>0</show_in_store>

					<fields>
						<active translate="label">
							<label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</active>

						<title translate="label">
							<label>Title</label>
							<frontend_type>text</frontend_type>
							<sort_order>8</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</title>

            <order_status translate="label">
              <label>Open order status</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_order_status</source_model>
              <sort_order>9</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </order_status>

            <active_installments translate="label">
							<label>Enable installments</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</active_installments>

            <maximum_installments translate="label">
                <label>Installments number</label>
                <frontend_type>multiselect</frontend_type>
                <source_model>Ebanx_Express_Adminhtml_Model_System_Config_Source_Installments</source_model>
                <sort_order>10</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>0</show_in_store>
            </maximum_installments>

            <installments_mode translate="label">
                <label>Installments mode</label>
                <frontend_type>select</frontend_type>
                <source_model>Ebanx_Express_Block_InstallmentsMode</source_model>
                <sort_order>11</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>0</show_in_store>
            </installments_mode>

            <interest_installments translate="label">
							<label>Installments interest rate (%/month)</label>
							<frontend_type>text</frontend_type>
							<sort_order>12</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</interest_installments>

            <custom_interest translate="label">
							<label>Custom installments interest rate (%/month)</label>
              <frontend_model>ebanx_express/adminhtml_custominterest</frontend_model>
              <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
							<sort_order>13</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</custom_interest>

            <paymentcurrency translate="label">
              <label>Payment currency</label>
              <frontend_type>select</frontend_type>
              <source_model>Ebanx_Express_Block_PaymentCurrency</source_model>
              <sort_order>15</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </paymentcurrency>

            <allowspecific translate="label">
              <label>Payment from Applicable Countries</label>
              <frontend_type>select</frontend_type>
              <sort_order>16</sort_order>
              <source_model>adminhtml/system_config_source_payment_allspecificcountries</source_model>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </allowspecific>

            <specificcountry translate="label">
              <label>Payment from Specific Countries</label>
              <frontend_type>multiselect</frontend_type>
              <sort_order>17</sort_order>
              <source_model>adminhtml/system_config_source_country</source_model>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
              <depends><allowspecific>1</allowspecific></depends>
            </specificcountry>
					</fields>
				</ebanx_express>
			</groups>
		</payment>
	</sections>
</config>
